@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header
{
    Đây là Trang Chủ(Quản lý người dùng)
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách thành viên
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="Nhập vào thành viêm muốn tìm" value="@ViewBag.searchstring" name="searchstring" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-info">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Mật khẩu</th>
                                <th>Họ Tên</th>
                                <th>Ngày Sinh</th>
                                <th>Email</th>
                                <th>Administrator</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.UserID">
                                    <td>@item.Username</td>
                                    <td>@item.Password</td>
                                    <td>@item.Fullname</td>
                                    <td>@item.Birthday</td>
                                    <td>@item.Email</td>
                                    <td>
                                        @if (@item.IsAdmin == 1)
                                        {
                                            <p class="fa fa-check"></p>
                                        }
                                        else
                                        {
                                            <p class="fa fa-times"></p>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/Home/Edit/@item.UserID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @userid = item.UserID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có chắc muốn xóa thành viên này?",
                                       OnComplete = "$('#row_" + @item.UserID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                           
                            
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchstring = ViewBag.searchstring }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>