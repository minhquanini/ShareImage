@model PagedList.IPagedList<Model.EF.Feedback>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListFB";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header
{
    Đây là Quản lý Phản hồi
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách phản hồi
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("ListFb", "Home", FormMethod.Get))
                {
                    
                
                
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                              
                                <th>Tên Phản hồi</th>
                                <th>Nội dung</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Ngày viết</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.UserID">
                                    <td>@item.UserID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Content</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>@item.CreateDate </td>
 
                                </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("ListFB", new { page}))
                </div>
                <!-- /.table-responsive -->
                }
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

